html
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible' content='IE=edge')
        title="Vista de Productos"
        meta(name='viewport' content='width=device-width, initial-scale=1.0, viewport-fit=cover')
        link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css' integrity='sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l' crossorigin='anonymous')
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x' crossorigin='anonymous')

    body(class="container")
      div(style="min-height: 100vh;")
        h1(style="color:blue")="Vista de Productos"
        br
        if hayProductos
          div(class="table-responsive")
            div(class="container")
              div(class="row")
                each producto in productos
                  div(class="col-12 col-sm-8 col-md-6 col-lg-4")
                      div(class="card")
                        img(class="card-img", src=producto.thumbnail, alt=producto.title)
                        div(class="card-img-overlay d-flex justify-content-end")
                            a(href="#", class="card-link text-danger like")
                                i(class="fas fa-heart")
                      div(class="card-body")
                          h4=producto.title
                          h6(class="card-subtitle mb-2 text-muted")!=`Style: ${producto.title}`
                          p(class="card-text")!="New Collection"
                          div(class="input-group")
                            select(class="custom-select mr-1")
                              option(selected)!="Color"
                              option(value="1")!="Verde"
                              option(value="2")!="Azul"
                              option(value="3")!="Rojo"
                            select(class="custom-select mr-1")
                              option(selected)!="Size"
                              option(value="1")!="L"
                              option(value="2")!="M"
                              option(value="3")!="S"
                          div(class="buy d-flex justify-content-between align-items-center")
                              div(class="price text-success")
                                h5(class="mt-4")!=`$ ${producto.price}`
                                a(href="#", class="btn btn-danger mt-3")
                                    i(class="fas fa-shopping-cart")!="Agregar al carrito"
