html
    head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    title="Carga de Productos"
    meta(name='viewport' content='width=device-width, initial-scale=1.0, viewport-fit=cover')
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css' integrity='sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l' crossorigin='anonymous')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x' crossorigin='anonymous')

    body(class="container mt-3")
      form(name="form1", method="post", action="/api/productos/guardar")
          div(class="mb-3")
            label(for="1" class="form-label")!="Nombre del Producto"
            input#1(type="text", name="title"  class="form-control")
            div(class="form-text")!="Ejemplo: Calculadora"
          div(class="mb-3")
            label(for="2" class="form-label")!="Precio"
            input#2(type="text", name="price"  class="form-control")
            div(class="form-text")!="Ejemplo: 100.35"
          div(class="mb-3")
            label(for="3" class="form-label")!="Foto URL"
            input#3(type="text", name="thumbnail"  class="form-control")
            div(class="form-text")!="Ejemplo: https://cdn3.iconfinder.com/data/icons/education-209/64/calculator-math-tool-school-256.png"
            button(type="submit", class="btn btn-success")!="Enviar"
